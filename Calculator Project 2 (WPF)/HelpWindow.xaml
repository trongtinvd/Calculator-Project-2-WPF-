<Window x:Class="Calculator_Project_2__WPF_.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_Project_2__WPF_"
        mc:Ignorable="d"
        Title="HelpWindow" Height="200" Width="350">
    <Grid Background="#e1e1e1">
        <TextBlock xml:space="preserve" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Padding="7">
